{
    "name": "apocalypse-rpg",
    "version": "1.0.0",
    "description": "Survive the Wasteland",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build-win": "electron-builder --win",
        "build-mac": "electron-builder --mac",
        "build-linux": "electron-builder --linux"
    },
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "electron": "^39.2.7",
        "electron-builder": "^24.0.0"
    },
    "build": {
        "appId": "com.yourname.apocalypse-rpg",
        "productName": "Apocalypse RPG",
        "files": [
            "**/*",
            "!node_modules/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "icon.png"
        },
        "mac": {
            "target": "dmg",
            "icon": "icon.png"
        },
        "linux": {
            "target": "AppImage",
            "icon": "icon.png"
        }
    }
}
